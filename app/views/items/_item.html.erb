<div class="flex mb-2 items-center any-list--item <%=  item.completed? ? "checked" : "" %>" id="<%= dom_id(item) %>">
  <label class="any-check mr-4">
    <input type="checkbox" class="hidden" data-reflex="change->List#toggle_item_completion" data-item-id="<%= item.id %>" <%= item.completed? ? "checked" : "" %>>
    <svg class="hidden w-4 h-4 text-green-600 pointer-events-none" viewBox="0 0 172 172"><g fill="none" stroke-width="none" stroke-miterlimit="10" font-family="none" font-weight="none" font-size="none" text-anchor="none" style="mix-blend-mode:normal"><path d="M0 172V0h172v172z"/><path d="M145.433 37.933L64.5 118.8658 33.7337 88.0996l-10.134 10.1341L64.5 139.1341l91.067-91.067z" fill="currentColor" stroke-width="1"/></g></svg>
  </label>
  <p data-controller="linkify" class="any-list--item--text break-words pr-1 w-full text-sm"><%= item.desc %></p>
  <button data-reflex="click->List#destroy_item" data-item-id="<%= item.id %>" class="focus:outline-none outline-none hover:text-red py-2 rounded inline-flex items-center delete-btn">
