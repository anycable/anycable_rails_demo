<div class="absolute mt-1 w-full">
  <div class="flex justify-center">
    <% if flash[:notice] %>
      <div data-controller="alert" class="max-w-sm bg-white border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
        <p class="text-sm"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div data-controller="alert" class="max-w-sm bg-white border-t-4 border-red rounded-b text-red px-4 py-3 shadow-md" role="alert">
        <p class="text-sm"><%= flash[:alert] %></p>
      </div>
    <% end %>
  </div>
</div>
